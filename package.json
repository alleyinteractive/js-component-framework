{
  "name": "js-component-framework",
  "version": "2.0.2",
  "description": "This framework is a method of attaching an ES6 class to a DOM element or collection of DOM elements.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "build:commonjs": "NODE_ENV=cjs npx babel src --out-dir lib",
    "build:esm": "NODE_ENV=es npx babel src --out-dir es",
    "lint": "npx eslint src/**",
    "lint:fix": "npx eslint src/** --fix",
    "prepare": "npm run build:esm && npm run build:commonjs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Alley Interactive (alley.co)",
  "contributors": [
    "Owen Stowe <owen@alley.co> (alley.co)",
    "Pattie Reaves <pattie@alley.co> (alley.co)",
    "Ryan Domingue <ryan@alley.co> (alley.co)"
  ],
  "license": "GPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alleyinteractive/js-component-framework.git"
  },
  "keywords": [
    "es6"
  ],
  "bugs": {
    "url": "https://github.com/alleyinteractive/js-component-framework/issues"
  },
  "files": [
    "es",
    "lib"
  ],
  "homepage": "https://github.com/alleyinteractive/js-component-framework#readme",
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.16.5",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.5",
    "fastdom": "^1.0.10"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}
